                    tools:ignore="RtlCompat">

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:text="Porfavor responda la pregunta"
                    app:layout_constraintEnd_toEndOf="@+id/imagephoto1"
                    app:layout_constraintStart_toStartOf="@+id/imagephoto1"
                    app:layout_constraintTop_toBottomOf="@+id/textopenquestion1" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout131"
                    android:layout_width="302dp"
                    android:layout_height="168dp"
                    android:layout_marginTop="40dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/guidelinequestion2121">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cardView41"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/inputTextd"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:backgroundTint="@android:color/transparent"
                            android:spinnerMode="dialog"
                            tools:layout_editor_absoluteX="0dp"
                            tools:layout_editor_absoluteY="0dp" />
                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginBottom="15dp"
                    android:gravity="center"
                    android:text="Observaciones"
                    app:layout_constraintBottom_toTopOf="@+id/imagephoto1"
                    app:layout_constraintEnd_toEndOf="@+id/imagephoto1"
                    app:layout_constraintStart_toStartOf="@+id/imagephoto1" />

                <ImageView

                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_menu_gallery"
                    android:visibility="gone"
                    app:layout_constraintBottom_toTopOf="@+id/guidelinequestion2121"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/textopenquestion1"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView

                    android:id="@+id/imagephoto1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="10dp"
