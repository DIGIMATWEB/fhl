<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/evidenceVideo"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="#DFDFDF"
        app:layout_constraintBottom_toTopOf="@+id/descVideo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>

    <TextView
        android:id="@+id/descVideo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="-- -- --"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/evidenceVideo"
        app:layout_constraintStart_toStartOf="@+id/evidenceVideo" />

    <ImageView
        android:id="@+id/overlay"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:src="@drawable/ic_cameraportraitico"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/evidenceVideo"
        app:layout_constraintStart_toStartOf="@+id/evidenceVideo"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_cameraico" />

</androidx.constraintlayout.widget.ConstraintLayout>